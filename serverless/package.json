{
  "name": "apollo-search-api",
  "version": "1.0.0",
  "description": "Express API using AWS Lambda",
  "author": "Ben Inkster",
  "type": "module",
  "scripts": {
    "dockerstart": "cd local-dev && ./local-start.sh && cd ..",
    "dockerstop": "cd local-dev && ./local-stop.sh && cd ..",
    "prestart": "cd local-dev && ./local-start.sh && cd ..",
    "start": "nodemon ./node_modules/serverless/bin/serverless offline start",
    "quickstart": "nodemon ./node_modules/serverless/bin/serverless offline start",
    "poststart": "cd local-dev && ./local-stop.sh && cd ..",
    "pretest": "cd local-dev && ./local-start.sh && cd ..",
    "test": "jest --coverage --openHandlesTimeout=3000 --force-exit",
    "jest": "jest --coverage --openHandlesTimeout=3000",
    "posttest": "cd local-dev && ./local-stop.sh && cd ..",
    "deploy": "serverless deploy",
    "openapi": "serverless openapi generate -o ./docs/api/openapi.json -f json -a 3.0.3 -p ./docs/api/postman.json"
  },
  "nodemonConfig": {
    "restartable": false,
    "ext": "js,cjs,ejs,json,hbs,html,yaml,yml",
    "ignore": ["docs/**", "local-dev/**", "node_modules/**"],
    "events": {
      "start": "echo \"Start event\"",
      "crash": "echo \"Crash event\"",
      "exit": "echo \"Exit event\""
    }
  },
  "dependencies": {
    "@codegenie/serverless-express": "^4.13.0",
    "axios": "^1.6.0",
    "bcrypt": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.17.1",
    "fs": "^0.0.1-security",
    "joi": "^17.12.1",
    "jose": "^5.2.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.9.1",
    "njwt": "^1.0.0",
    "nnode": "^0.3.3",
    "path": "^0.12.7",
    "serverless": "^3.25.1",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-mysql": "^1.5.5",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.23.9",
    "@types/joi": "^17.2.3",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "serverless-offline": "^10.3.2",
    "serverless-offline-direct-lambda": "^0.0.1",
    "serverless-offline-sns": "^0.77.2",
    "serverless-offline-sqs": "^8.0.0",
    "serverless-openapi-documenter": "^0.0.93",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  }
}
